<configuration name="logfile.conf" description="Logfile">
    <settings>
        <param name="rotate-on-hup" value="false"/>
    </settings>
    <profiles>
        <profile name="default">
            <settings>
                <param name="logfile" value="/dev/stdout"/>
                <param name="rollover" value="0"/>
            </settings>
            <mappings>
                <map name="all" value="console,debug,info,notice,warning,err,crit,alert"/>
            </mappings>
        </profile>
    </profiles>
</configuration>
